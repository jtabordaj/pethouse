<!doctype html>
<html>
<head>
    <%- include('../partial/head')%>
</head>
<body>
    <header>
        <%- include('../partial/header')%>
    </header>
    <main>
        <div class="registerContainer">
            <div class="registerTitle">
                <h2>Registrate</h2>
                <p style="padding-top: 10px;"> Los campos marcados con * son obligatorios</p>
            </div>
                <form action="/register" method="POST" class="formRegister" enctype="multipart/form-data" >
                    
                    <article class="error">

                    </article>



                    <input type="file" name="img" accept="image/*" id="img" > 
                    <label for="name">Nombre Completo *</label>
                    <% if (locals.error && locals.error.name) { %>
                        <p class="msgError"><%= error.name.msg %></p>
                       <% } %>
                    <input class="registerInput" type="text" id="name" name="name" placeholder="Escribe tu nombre completo" <% if (locals.datosUsuario && locals.datosUsuario.name != "") { %>
                     value = <%= datosUsuario.name %>
                    <% } %>>
                    <label for="user">Usuario *</label>
                    <% if (locals.error && locals.error.user) { %>
                        <p class="msgError"><%= error.user.msg %></p>
                       <% } %>
                    <input class="registerInput" type="text" id="user" name="user" placeholder="Escribe un nombre de usuario" <% if (locals.datosUsuario && locals.datosUsuario.user != "") { %>
                        value = <%= datosUsuario.user %>
                       <% } %>> 
                    
                    <label for="email">Email *</label>
                    <% if (locals.error && locals.error.email) { %>
                        <p class="msgError"><%= error.email.msg %></p>
                       <% } %>
                    <input class="registerInput" type="email" id="email" name="email" placeholder="Correo Electronico" <% if (locals.datosUsuario && locals.datosUsuario.email != "") { %>
                        value = <%= datosUsuario.email %>
                       <% } %>>

                    <label for="address">Direccion *</label>
                    <% if (locals.error && locals.error.address) { %>
                        <p class="msgError"><%= error.address.msg %></p>
                       <% } %>
                    <input class="registerInput" type="text" id="address" name="address" placeholder="Direccion de residencia" <% if (locals.datosUsuario && locals.datosUsuario.address != "") { %>
                        value = <%= datosUsuario.address %>
                       <% } %> >
                    <% if (!locals.type) { %>
                        <label for="password">Escribe una contrase単a *</label>
                        <% if (locals.error && locals.error.password) { %>
                            <p class="msgError"><%= error.password.msg %></p>
                        <% } %>
                        <input class="registerInput" type="password" id="password" name="password" placeholder="Contrase単a" <% if (locals.datosUsuario && locals.datosUsuario.password != "") { %>
                            value = <%= datosUsuario.password %>
                        <% } %>>

                        <label for="password2">Confirma tu contrase単a *</label>
                        <% if (locals.error && locals.error.password2) { %>
                            <p class="msgError"><%= error.password2.msg %></p>
                        <% } %>
                        <input class="registerInput" type="password" id="password2" name="password2" placeholder="Confirma la contrase単a" <% if (locals.datosUsuario && locals.datosUsuario.password2 != "") { %>
                            value = <%= datosUsuario.password2 %>
                        <% } %> >
                    <% } %>
                    

                    <button class= "send" type="submit" name="enviar" >Registrarte</button>
                    <button class= "delete" type="reset" name="borrar" >Borrar Todo</button>
                </form>
        </div>
    </main>
    <%- include('../partial/footer')%>
    <script src="/js/validacionUsuario.js"></script>
</body>
</html>
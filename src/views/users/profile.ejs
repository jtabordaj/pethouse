<!doctype html>
<html>
<head>
    <%- include('../partial/head')%>
</head>
<body>    
    <header>
        <%- include('../partial/header')%>
    </header>
    <main>
    <div class="containerProfile">
        <h1>Tu Perfil</h1>
        <img class="imgProfile" src="<%= session.img %>" alt="Profile Picture">

        <h2>Nombre:</h2>
        <p><%= session.name %></p>

        <h2>Usuario:</h2>
        <p><%= session.user %></p>

        <h2>Direccion:</h2>
        <p><%= session.direccion %></p>
    </div>
    <div class="profileButtons">
        <form action="/editProfile">
            <button class="profileEdit">Editar Perfil</button>
        </form>

        <% if (session.typeUser == 1) { %>
            <form action="/register">
                <button class="btnNaranja">Registrar admin</button>
            </form>
            <form action="/createProduct">
                <button class="btnVioleta">Crear producto</button>
            </form>
            
            <form action="/listProducts">
                <button class="btnNaranja">Listado de productos</button>
            </form>
        <% } %>

        <form action="/logOut" onclick="showLogoutMessage()">
            <script>
                function showLogoutMessage() {
                  alert("Tu sesion ha finalizado.");
                }
            </script>
            <button class="logOut">Cerrar Sesion</button>
        </form>
    </div>
    </main>
<%- include('../partial/footer')%>
</body>
</html>

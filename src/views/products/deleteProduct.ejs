<!DOCTYPE html>
<html lang="en">
    <%- include("../partial/head")%>
<body>
    <%- include("../partial/header")%>

<main class ="product">
    <form action="/deleteProduct/<%=pro.id%>?_method=delete" method="post">
    <section>
        <article>
            <div>
                <label for="nombreProducto">Nombre del producto:</label>
                <input type="text" name="nombre_producto" id="nombreProducto"  value="<%=pro.nombre_producto%>">
            </div>
            <div>
                <label for="marca">Marca del producto:</label>
                <input type="text" name="marca" id="marca" value="<%=pro.marca%>">
            </div>
            <div>
                <label for="descripcion">Descripci√≥n sobre el producto:</label>
                <input type="text" name="descripcion" id="descripcion" value="<%=pro.descripcion%>">
            </div>
        </article>

        <article class="deleteProduct">
            <label for="imagenProducto">imagen del producto:</label>
            <picture><img src=<%=pro.img%> alt=""></picture>
        </article>

        <article>
            <div>
                <label for="precio">Precio del producto:</label>
                <input type="text" name="precio" id="precio" value="<%=pro.precio%>">
            </div>
            <div>
                <label for="descuento">descuento</label>
                <input type="text" name="descuento" id="descuento" value="<%=pro.descuento%>">
            </div>
        </article>
        
        <article class="check">
            <div>
                <h3>Categoria</h3>
                <% category.forEach(cat => {%>
                    <div>
                        <label for="<%- cat.titulo %>"><%= cat.titulo %></label>
                        <input type="checkbox" name="<%= cat.categoria %>" id="<%= cat.titulo %>" value="<%= cat.titulo %>" <% if(pro.categoria.includes(cat.titulo)) {%> checked<% } %> >
                    </div>
                <%}); %> 
            </div>
            <div>
                <h3>Tipo de mascota</h3>
                
                <% typeOfPets.forEach(cat => {%>
                    
                    <div>
                        <label for="<%- cat.titulo %>"><%= cat.titulo %></label>
                        <input type="checkbox" name="<%= cat.categoria %>" id="<%= cat.titulo %>" value="<%= cat.titulo %>" <% if(pro.tipo_mascota.includes(cat.titulo)) {%> checked<% } %> >
                    </div>
                <%}); %> 
            </div> 
        </article>
        
        <div class="button">
            <button type="submit">Eliminar producto</button>
        </div>
        </section>
    </main>

    <%- include("../partial/footer")%>
    
</body>
</html>